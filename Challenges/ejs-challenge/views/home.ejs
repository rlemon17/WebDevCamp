<%-include("partials/header")-%>

<h1>Home</h1>
<p><%=homeCont%></p>
<% posts.forEach(post => { %>
    <h1><%=post.title%></h1>

    <!-- Post content, truncate if necessary, then add a link -->
    <% if (post.content.length <= 100) { %>
        <p><%=post.content%></p>
    <% } else { %>
        <p><%=post.content.substring(0, 100) + "..."%><a href="<%=post.link%>">Read more</a></p>
    <% } %> 

<% }); %>

<%-include("partials/footer")-%>